path = "/data/logstash"
Bluepill.application("logstash", :log_file => "/var/log/bluepill.log") do |app|
  app.working_dir = path
  app.uid = 'deploy'
  app.gid = 'deploy'
  app.process("logstash") do |process|
    process.stdout = process.stderr = "#{path}/logstash.out"
    process.pid_file = "#{path}/logstash.pid"
    process.start_command = "java -jar #{path}/logstash.jar agent -f #{path}/filter.conf"
    process.daemonize = true
  end
end

